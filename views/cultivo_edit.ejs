<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">Editarüè∑Ô∏è</h4>
          <p class="category">Editar cultivosü´†</p>
        </div>

        <div class="card-body">
          <!-- editar cultivos -->

          <form method="post" action="/eCultivos">
            <input name="id" type="hidden" value="<%= cultivo.id %>" />
            <div class="form-group">
              <label for="categoria">Categor√≠a</label>
            <select class="form-control" id="select" name="categoria">
                <option value="">Selecciona una categor√≠a</option>
                <!-- Aqu√≠ puedes cargar din√°micamente las opciones de categor√≠a desde la base de datos -->
                <% categoria.forEach(categoria => { %>
                <option value="<%= categoria.id  %>" <%= cultivo.categoria_id == categoria.id ? 'selected' : '' %>>
                    <%= categoria.nombre  %>
                </option>
                <% }); %>
            </select>
            </div>
            <div class="form-group">
              <label for="nombreProducto">Nombre del Producto</label>
              <input
                type="text"
                class="form-control"
                id="nombreProducto"
                name="nombreProducto"
                placeholder="Opcional"
                value="<%= cultivo.nombre %>"
              />
            </div>
            <div class="form-group">
              <label for="peso">Peso</label>
              <input
                type="text"
                class="form-control"
                id="peso"
                name="peso"
                placeholder="Peso del Producto o saco"
                value="<%= cultivo.peso %>"
              />
            </div>
            <div class="form-group">
              <label for="cantidad">Cantidad</label>
              <input
                type="number"
                class="form-control"
                id="cantidad"
                name="cantidad"
                placeholder="Cantidad del Producto o saco"
                value="<%= cultivo.cantidad %>"
              />
            </div>
            <div class="form-group">
              <label for="fecha">Fecha</label>
              <input
                type="date"
                class="form-control"
                id="fecha"
                name="fecha"
                value="<%= cultivo.fecha %>"
              />
            </div>

            <div class="modal-footer">
              <a
                class="btn btn-secondary"
                data-dismiss="modal"
                href="/cultivos"
              >
                Cerrar
              </a>
              <button type="submit" class="btn btn-primary">
                Guardar Producto
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
